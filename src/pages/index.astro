---
import Layout from "../layouts/Layout.astro";
import CarouselProduct from "@components/Productos/CaruselProduct.tsx";
let slides = ["https://i.blogs.es/a9b387/4983207079_cf51c35fe5_b/450_1000.jpg","https://i.blogs.es/a9b387/4983207079_cf51c35fe5_b/450_1000.jpg","https://i.blogs.es/a9b387/4983207079_cf51c35fe5_b/450_1000.jpg"]
---

<Layout title="Welcome to Astro.">
  <main class="flex w-full flex-col">
    <section id="home-banner" class="p-12">
      <h1 class="text-white text-[2rem] font-bold text-center">Conoce las marabillas de las setas</h1>
    </section>
    <section>
      <div class="relative">
        <div class="max-w-md">
          <CarouselProduct slides={slides} autoSlide={false} client:visible />
        </div>
      </div>
    </section>
    <h1>astro app</h1>
  </main>
</Layout>
<style>
  #home-banner {
    background-image: url('/public/setas-baner.png');
    animation: shadowAnimation 5s infinite linear alternate ;
  }
  @keyframes shadowAnimation {
    from {
      box-shadow: 0 0 10px rgb(241, 0, 241);
    }
    50% {
      box-shadow: 0 0 10px rgb(204, 37, 255);
    }
    75% {
      box-shadow: 0 0 10px rgb(37, 110, 255);
    }
    to {
      box-shadow: 0 0 10px rgb(0, 241, 255);
    }
  }
</style>