<style>
  article div {
    height: 0;
    padding: 0;
    display: none;
  }
  article button[aria-expanded="true"] ~ div {
    height: auto;
    padding: 1rem;
    display: block;
  }
  @keyframes visible {
    from {
      height: 0;
      padding: 0;
      display: none;
    }
    to {
      height: auto;
      padding: 1rem;
      display: block;
    }
  }
</style>
<script>
  const acordeons = document.querySelectorAll("[data-accordion-target]");
  console.log(acordeons);
  acordeons.forEach((acordeon) => {
    acordeon.addEventListener("click", (e) => {
      let aria_expant = (e.target as HTMLElement)?.getAttribute(
        "aria-expanded"
      );
      console.log(aria_expant);
      if (aria_expant === "true") {
        (e.target as HTMLElement)?.setAttribute("aria-expanded", "false");
      } else {
        (e.target as HTMLElement)?.setAttribute("aria-expanded", "true");
      }
    });
  });
</script>
