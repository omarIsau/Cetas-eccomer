---
import { Category } from "../../types";

interface Props {
  color:
    | "blue"
    | "gray"
    | "green"
    | "indigo"
    | "pink"
    | "purple"
    | "red"
    | "yellow";
  text: Category;
}
const { color, text } = Astro.props;
---

<span
  class={`bg-${color}-100 text-${color}-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-${color}-900 dark:text-${color}-300`}
  >{text}</span
>
