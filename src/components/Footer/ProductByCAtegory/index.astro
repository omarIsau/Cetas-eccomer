---
import Carousel from "@/components/Productos/CaruselProduct";
import { getSetasByCategory } from "@services/setasServices.ts";
interface Props {
  categories: string;
}
const { categories } = Astro.props;
const setas = getSetasByCategory(categories).slice(0, 3);
---

<footer class="container">
  <section class="flex gap-6">
    {
      setas.map((seta) => (
        <article class="w-full flex bg-slate-100 p-3">
          <div class="relative w-full">
            <div class="w-full">
              <Carousel
                slides={seta.imagenes}
                autoSlide={false}
                client:visible
              />
            </div>
          </div>
          <div class="flex flex-col w-full p-3">
            <h3 class="font-medium">{seta.nombre}</h3>
            <p class="text-sm">
              {seta.descripcion.split("/n")[0].slice(0, 30)}...
            </p>
            <div class="flex items-center mt-auto">
              <p class="text-blue-500 font-bold">${seta.precio}</p>
              <a
                class="ml-auto p-3 text-blue-500 font-bold cursor-pointer hover:underline"
                href={`/productos/producto/${seta.id}`}
              >
                mas...
              </a>
            </div>
          </div>
        </article>
      ))
    }
  </section>
</footer>
