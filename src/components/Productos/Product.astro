---
import type { Seta } from "../../types.d.ts";
interface Props {
  seta: Seta;
}
const { seta } = Astro.props;
---
<li class="bg-white p-4 rounded-md shadow-md">
    <a href={`/productos/producto/${seta.id}`}>
      <img
        class="w-full h-40 object-cover"
        src={seta.imagen}
        alt={seta.nombre}
      />
      <h2 class="text-lg font-bold">{seta.nombre}</h2>
      <p class="text-gray-500">{seta.descripcion.slice(0, 50)}...</p>
      <p class="text-blue-500 font-bold">${seta.precio}</p>
    </a>
  </li>